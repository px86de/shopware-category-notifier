<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Entity Definition -->
        <service id="Px86\CategoryNotifier\Core\Content\CategorySubscription\CategorySubscriptionDefinition">
            <tag name="shopware.entity.definition" entity="px86_category_notifier_subscription"/>
        </service>

        <!-- Controller -->
        <service id="Px86\CategoryNotifier\Storefront\Controller\CategorySubscriptionController" public="true">
            <argument type="service" id="px86_category_notifier_subscription.repository"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="Px86\CategoryNotifier\Service\NotificationService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Services -->
        <service id="Px86\CategoryNotifier\Service\NotificationService">
            <argument type="service" id="category.repository"/>
            <argument type="service" id="router"/>
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument type="service" id="mail_template.repository"/>
            <argument type="service" id="sales_channel.repository"/>
        </service>

        <!-- Subscriber -->
        <service id="Px86\CategoryNotifier\Subscriber\MailTemplateSubscriber">
            <argument type="service" id="mail_template.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Px86\CategoryNotifier\Subscriber\ProductSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="px86_category_notifier_subscription.repository"/>
            <argument type="service" id="Px86\CategoryNotifier\Service\NotificationService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Snippet Files -->
        <service id="Px86\CategoryNotifier\Core\Content\Snippet\SnippetFile_de_DE">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Px86\CategoryNotifier\Core\Content\Snippet\SnippetFile_en_GB">
            <tag name="shopware.snippet.file"/>
        </service>
    </services>
</container>
